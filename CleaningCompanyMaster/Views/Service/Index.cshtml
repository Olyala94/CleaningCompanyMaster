@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@foreach (var item in Model)
{

        <div class="col-sm-6 col-lg-4 pb-lg-6 px-lg-4 pb-4">
            <div class="card py-4 shadow-sm h-100 hover-top">
                <div class="text-center">
                    <img src="@item.ImageUrl" height="120" alt="" />
                    <div class="card-body px-2">
                        <h6 class="fw-bold fs-1 heading-color">@item.Title</h6>
                        <p class="mb-0 card-text">@item.Description</p>
                        <a href="#" class="btn btn-outline-danger">Sil</a>
                    <a href="#" class="btn btn-outline-success">Ekle</a>
                    </div>
                </div>
            </div>
        </div>

}

